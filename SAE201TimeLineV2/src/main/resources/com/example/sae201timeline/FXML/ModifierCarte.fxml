<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="504.0" prefWidth="752.0" stylesheets="@../PNG/style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.application.ModifierCarteController">

    <VBox layoutX="50" layoutY="30" spacing="10" AnchorPane.bottomAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.topAnchor="20">

        <Label styleClass="GeneralTitles" text="Modifier une carte" />

        <ComboBox fx:id="cardSelector" promptText="Choisir une carte Ã  modifier" />

        <TextField fx:id="nameField" promptText="Nom" />
        <TextField fx:id="dateField" promptText="Date" />
        <TextArea fx:id="descriptionField" prefRowCount="4" promptText="Description" />
        <TextField fx:id="urlField" promptText="URL de l'image" />

        <HBox spacing="15">
            <Button onAction="#saveChanges" styleClass="BasicButton" text="Sauvegarder" />
            <Button mnemonicParsing="false" onAction="#createNewCard" styleClass="BasicButton" text="Creer Carte" />
            <Button mnemonicParsing="false" onAction="#deleteCard" styleClass="BasicButton" text="Supprimer carte" />
            <Button onAction="#goBack" styleClass="BasicButton" text="Retour" />
        </HBox>
    </VBox>
</AnchorPane>
